{
  "env": {
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["prettier"],
  "rules": {
    "semi": ["error", "always"],
    "no-unused-vars": "error",
    "no-var": "error",
    "arrow-spacing": "warn",
    "arrow-parens": "warn",
    "prefer-arrow-callback": "warn",
    "no-const-assign": "error",
    "spaced-comment": "warn"
  }
}
